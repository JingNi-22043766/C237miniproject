<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <%- include ('partials/navbar.ejs') %>
  
  <div class="container">
    <div class="d-flex justify-content-between align-items-center my-4">
      <h2>Product List</h2>
      <a href="/addProduct" class="btn btn-success">Add Product</a>
    </div>

        <table class="table table-hover small text-center">
          <thead>
              <tr>
                <th width="200">Product Name</th>
                <th width="200">Product Image</th>
                <th>Quantity</th>
                <th>Price</th>
              </tr>
          </thead>
          <tbody>
            <% for(let i=0; i < products.length; i++) { %>
              <tr>
                <td><a href="/products/<%= products[i].productId %>" ><%= products[i].productName %></a></td>
                <td><img src = "<%= products[i].image %>" width="20%"></td>
                <td><%= products[i].quantity %></td>
                <td>$<%= products[i].price.toFixed(2) %></td>
                <td><a href="/editProduct/<%= products[i].productId %>" >Edit</a></td>
                <td><a href="/deleteProduct/<%= products[i].productId %>" 
                  onclick="return confirm('Are you sure you want to delete this products?')" >Delete</a></td>
              </tr>
            <% } %>
          </tbody>
        </table>

        <div class="text-center">
            <a href="/" class="btn btn-primary">Back</a>
        </div>
    </div>
    
</body>
</html>
